{
  "name": "jimomarket-backend",
  "version": "1.0.0",
  "description": "Hedera Hackathon AI Theme Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "env:copy": "[ ! -f .env ] && cp .env.example .env || echo '.env already exists'",
    "clean:deps": "rm -rf node_modules",
    "clean:build": "rm -rf dist"
  },
  "dependencies": {
    "@hashgraph/did-sdk-js": "^0.1.1",
    "@hashgraph/proto": "^2.24.0",
    "@hashgraph/sdk": "^2.72.0",
    "@prisma/client": "^6.18.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pinata": "^2.5.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@vitest/ui": "^4.0.7",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
