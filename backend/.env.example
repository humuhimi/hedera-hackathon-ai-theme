# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=4000
NODE_ENV=development

# Hedera Manager Account (for network setup only)
HEDERA_NETWORK=testnet
HEDERA_MANAGER_ACCOUNT_ID=0.0.xxxxx
HEDERA_MANAGER_PRIVATE_KEY=xxxxxxxxx

# DID Network (run "npm run setup:network" to generate)
DID_TOPIC_ID=0.0.xxxxx

# CORS
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Encryption (for user DID keys)
ENCRYPTION_KEY=your-super-secret-encryption-key-change-in-production-32
